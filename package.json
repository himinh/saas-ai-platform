{
	"name": "nuxt-app",
	"private": true,
	"type": "module",
	"scripts": {
		"build": "nuxt build",
		"dev": "nuxt dev",
		"generate": "nuxt generate",
		"preview": "nuxt preview",
		"postinstall": "nuxt prepare",
		"prepare": "husky",
		"clean": "rm -rf .nuxt dist .output",
		"lint:js": "eslint --ext \".ts,.vue\" --ignore-path .eslintignore .",
		"lint:prettier": "prettier --check .",
		"lint": "pnpm lint:js && pnpm lint:prettier",
		"lint:fix": "prettier --write --list-different . && pnpm lint:js --fix",
		"commitmsg": "commitlint -E HUSKY_GIT_PARAMS"
	},
	"dependencies": {
		"@pinia/nuxt": "^0.5.1",
		"@radix-icons/vue": "^1.0.0",
		"class-variance-authority": "^0.7.0",
		"clsx": "^2.1.0",
		"date-fns": "^3.6.0",
		"firebase": "^10.11.0",
		"markdown-it": "^14.1.0",
		"nuxt": "^3.11.2",
		"radix-vue": "^1.7.0",
		"socket.io-client": "^4.7.5",
		"tailwind-merge": "^2.2.2",
		"tailwindcss-animate": "^1.0.7",
		"vue": "^3.4.21",
		"vue-router": "^4.3.0"
	},
	"devDependencies": {
		"@commitlint/cli": "^19.2.1",
		"@commitlint/config-conventional": "^19.1.0",
		"@nuxt/eslint-config": "^0.3.6",
		"@nuxtbase/auth-ui-vue": "^0.3.6",
		"@nuxtjs/eslint-module": "^4.1.0",
		"@nuxtjs/supabase": "^1.2.0",
		"@nuxtjs/tailwindcss": "^6.11.4",
		"@supabase/auth-ui-shared": "^0.1.8",
		"@tailwindcss/typography": "^0.5.12",
		"@types/markdown-it": "^14.0.1",
		"@typescript-eslint/eslint-plugin": "^7.6.0",
		"@typescript-eslint/parser": "^7.6.0",
		"eslint": "8.57.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-nuxt": "^4.0.0",
		"eslint-plugin-prettier": "^5.1.3",
		"husky": "^9.0.11",
		"lint-staged": "^15.2.2",
		"nuxt-icon": "^0.6.10",
		"nuxt-typed-router": "^3.6.2",
		"openai": "^4.33.1",
		"prettier": "^3.2.5",
		"prettier-plugin-organize-imports": "^3.2.4",
		"prettier-plugin-tailwindcss": "^0.5.13",
		"shadcn-nuxt": "^0.10.2",
		"typescript": "^5.4.5"
	},
	"lint-staged": {
		"**/*.{js,ts,vue,html}": [
			"pnpm lint:fix"
		]
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged && commitlint -E HUSKY_GIT_PARAMS"
		}
	}
}
